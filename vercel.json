{
  "version": 2,
  "name": "w3jverse",
  "builds": [
    {
      "src": "build/server/index.js",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb"
      }
    },
    {
      "src": "build/client/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/build/client/(.*)",
      "dest": "/build/client/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/build/server/index.js"
    }
  ],
  "regions": [
    "iad1",
    "sfo1", 
    "lhr1",
    "sin1",
    "syd1",
    "fra1"
  ],
  "framework": "remix",
  "buildCommand": "npm run build",
  "outputDirectory": "build/client",
  "installCommand": "npm ci",
  "devCommand": "npm run dev",
  "env": {
    "NODE_ENV": "production",
    "W3JVERSE_BRAND": "true"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        }
      ]
    },
    {
      "source": "/build/client/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/ai/(.*)",
      "destination": "/api/ai/$1"
    }
  ],
  "functions": {
    "build/server/index.js": {
      "maxDuration": 30
    }
  }
}